<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CookPad" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.CookPad" parent="Base.Theme.CookPad"/>

    <style name="WhiteIconToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.IconToolbar</item>
    </style>

    <style name="ThemeOverlay.IconToolbar" parent="">
        <item name="iconTint">@color/white</item>
    </style>

    <style name="BrownFilledTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">#EBE1D4</item>
        <item name="hintTextColor">#4D4639</item>
        <item name="boxStrokeColor">#4D4639</item>
        <item name="android:textColorHint">#804D4639</item>
<!--        50% transparency for the hint-->
    </style>

    <style name="BrownButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">#F2DDB8</item>
        <item name="android:textColor">#52452A</item>
        <item name="iconTint">#52452A</item>
    </style>

    <style name="RemoveBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="BrownishSearchView" parent="Widget.Material3.SearchView">
        <item name="android:background">#EBE1D4</item>
        <item name="android:textColor">#4D4639</item>
        <item name="android:textColorHint">#804D4639</item>
    </style>

</resources>