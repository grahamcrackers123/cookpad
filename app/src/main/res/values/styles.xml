<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Rounded corners -->
        <item name="shapeAppearanceMediumComponent">@style/RoundedDialogShape</item>
    </style>

    <style name="RoundedDialogShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/searchview_text</item>
        <item name="android:textColorHint">@color/searchview_hint</item>
        <item name="queryBackground">@color/searchview_background</item>
        <item name="submitBackground">@color/searchview_background</item>
    </style>

